@model Tickets.Models.Ticket
@{
    ViewData["Title"] = "Edit Ticket";
    Layout = "~/Views/Shared/MySidebar.cshtml";

}
<h2>Edit Ticket</h2>

<!-- Link to the CSS file -->
<link rel="stylesheet" href="~/css/edit-ticket.css" />

<form asp-action="Edit">
    
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" readonly/>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject" class="control-label"></label>
        <input asp-for="Subject" class="form-control" maxlength="50" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TicketBody" class="control-label"></label>
        <textarea asp-for="TicketBody" class="form-control"></textarea>
        <span asp-validation-for="TicketBody" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Priority" class="control-label"></label>
        <select asp-for="Priority" class="form-control">
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option>Open</option>
            <option>Pending</option>
            <option>Resolved</option>
            <option>Closed</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
   @*  <div class="form-group">
        <label for="deadline">Set Deadline:</label>
        <input type="date" id="deadline" name="Deadline" class="form-control" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div> *@
    <!-- New User Assignment Field -->
    <div class="form-group">
        <label asp-for="AssignedUserId" class="form-label"></label>
        <select asp-for="AssignedUserId" class="form-control" asp-items="ViewBag.UserOptions">
            <option value="">Select User</option>
        </select>
        <span asp-validation-for="AssignedUserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AssignedByEmail" class="form-label"></label>
        <select asp-for="AssignedByEmail" class="form-control" asp-items="ViewBag.LeadOptions">
            <option value="">Select User</option>
        </select>
        <span asp-validation-for="AssignedByEmail" class="text-danger"></span>
    </div>

    
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Save</button>
   @*  <a asp-action="Index" class="btn btn-secondary">Cancel</a> *@
</form>
